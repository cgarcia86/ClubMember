@model IEnumerable<WebDesignTest.Models.RegularMember>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AddRegularMember")
</p>
<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditMemberInfo", new { id=item.ID }) |
            @Html.ActionLink("Details", "ViewMemberInfo", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteRegMember", new { id=item.ID })
        </td>
    </tr>
}

</table>
