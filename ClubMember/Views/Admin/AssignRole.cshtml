
@{
    ViewBag.Title = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AssignRole</h2>

@using (Html.BeginForm("AssignRole", "Admin", FormMethod.Post))
{

<div class="jumbotron " style="background-color:rgba(0,0,0,0.3)">
    <div class="row">

        <div class="form-group">
            <label class="control-label">User Name:</label>
            <input type="text" name="UserNameTxt" class="form-control" />
        </div>

        <div class="form-group">
            <label class="control-label"> Select Role: </label>
            @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")
        </div>
    </div>
  

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <button class="btn btn-primary" type="submit">Assign Role</button>
        </div>
    </div>
</div>
        }

